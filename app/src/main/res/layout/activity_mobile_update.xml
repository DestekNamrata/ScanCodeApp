<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            >
            <ImageView
                android:id="@+id/img_bckMob"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/margin10"
                android:src="@drawable/ic_arrow_back"/>
            <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile update"
                app:customFont="@string/str_font_bold"
                android:padding="@dimen/margin10"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"

                android:gravity="center_horizontal"
                android:textSize="@dimen/textSize20"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin10"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="@dimen/margin20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_phoneForgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin25"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.vayortricks.vtproductscanner.CustomView.CustomEditText
                                android:id="@+id/edt_MobUpdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phone Number"
                                android:padding="5dp"
                                android:inputType="number"
                                android:fontFamily="sans-serif"

                                android:background="@null"
                                android:textSize="@dimen/textSize14"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/lightest_gray"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin15"

                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:theme="@style/TextInputLayoutAppearance">
                                    <com.vayortricks.vtproductscanner.CustomView.CustomEditText
                                        android:id="@+id/edt_otpMobUpdate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/textSize14"
                                        android:hint="Verification Code"
                                        android:fontFamily="sans-serif"
                                        android:background="@null"
                                        android:layout_marginRight="5dp"
                                        android:padding="@dimen/padding10"
                                        android:inputType="text"/>

                                </com.google.android.material.textfield.TextInputLayout>

                                <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                                    android:id="@+id/txt_sendCodeMobUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin20"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/textSize14"
                                    android:gravity="center"
                                    android:text="Send"
                                    android:visibility="visible"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:padding="5dp"
                                    android:fontFamily="sans-serif"
                                    android:layout_weight="0.8"
                                    />
                                <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                                    android:id="@+id/txt_ResendCodeMobUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin20"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/textSize14"
                                    android:gravity="center"
                                    android:text="Resend"
                                    android:visibility="gone"
                                    android:fontFamily="sans-serif"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:layout_weight="0.6"
                                    />

                                <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                                    android:id="@+id/txt_secsCodeMobUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin20"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="sans-serif"
                                    android:visibility="gone"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/textSize14"
                                    android:gravity="center"
                                    android:text=""
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:layout_weight="0.8"
                                    />

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/lightest_gray"/>
                        </LinearLayout>


                    </LinearLayout>



                    <com.vayortricks.vtproductscanner.CustomView.CustomButton
                        android:id="@+id/btn_UpdateMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:fontFamily="sans-serif"

                        android:layout_marginTop="@dimen/margin25"
                        android:textSize="@dimen/textSize16"
                        android:textColor="@color/white"
                        android:background="@drawable/drawable_btns_reg"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>



</RelativeLayout>