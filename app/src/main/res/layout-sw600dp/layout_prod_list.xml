<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/margin10"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin10"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_prod"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin10"
            android:background="@color/light_orange"
            android:scaleType="fitXY"
            android:src="@drawable/ic_vt_logo" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin10"
            android:orientation="vertical">

            <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                android:id="@+id/txt_prodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdmsnds"
                android:gravity="left"

                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize18"
                />
            <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:textStyle="bold"
                android:text="sdmsndnnnnnnsshjshdjash"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textSize18" />

            <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="sdmsndnnnnnnsshjshdjash"
                android:textColor="@color/text_color"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textSize16" />

        </LinearLayout>


    </LinearLayout>








</androidx.cardview.widget.CardView>