<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="@dimen/margin10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin10"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img_scan"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@color/light_orange"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_vt_logo" />


                <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                    android:id="@+id/txt_scanData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_weight="1"
                    android:text="sdmsnds"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textSize18"
                    />

            </LinearLayout>

            <com.vayortricks.vtproductscanner.CustomView.CustomTextView
                android:id="@+id/txt_scanData1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|end"
                android:fontFamily="sans-serif"
                android:layout_gravity="right|end"
                android:text="sdmsndnnnnnnsshjshdjash"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/textSize16" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>