<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.FragmentSettings">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg">

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin15"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="@dimen/margin15"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin15"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"

                            android:theme="@style/TextInputLayoutAppearance">
                            <com.essensys.JB089.CustomView.CustomEditText
                                android:id="@+id/edt_name_sett"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Name"
                                android:padding="8dp"
                                android:inputType="text"
                                android:fontFamily="sans-serif"

                                android:background="@null"
                                android:textSize="@dimen/textSize18"
                                />

                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/img_editName"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="5dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginTop="@dimen/margin10"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightest_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_weight="1"
                            android:theme="@style/TextInputLayoutAppearance">
                            <com.essensys.JB089.CustomView.CustomEditText
                                android:id="@+id/edt_email_sett"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:fontFamily="sans-serif"

                                android:padding="8dp"
                                android:inputType="textEmailAddress"
                                android:background="@null"
                                android:textSize="@dimen/textSize18"
                                />

                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/img_editEmail"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="5dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginTop="@dimen/margin10"
                            android:src="@drawable/ic_edit"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightest_gray"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin10"
                            android:layout_weight="1"
                            android:theme="@style/TextInputLayoutAppearance">
                            <com.essensys.JB089.CustomView.CustomEditText
                                android:id="@+id/edt_mob_sett"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phone Number"
                                android:padding="8dp"
                                android:inputType="number"
                                android:maxLength="10"
                                android:background="@null"
                                android:fontFamily="sans-serif"

                                android:textSize="@dimen/textSize18"
                                />

                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:id="@+id/img_editMob"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:padding="5dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginTop="@dimen/margin10"
                            android:src="@drawable/ic_edit"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lightest_gray"/>


                </LinearLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>
    </FrameLayout>


</RelativeLayout>