<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_forgot"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/bg"
            >
            <ImageView
                android:id="@+id/img_bckEmail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/margin15"
                android:src="@drawable/ic_arrow_back"/>
            <com.essensys.JB089.CustomView.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email update"
                app:customFont="@string/str_font_bold"
                android:padding="@dimen/margin10"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textSize24"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin15"
            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                app:cardCornerRadius="@dimen/margin20"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_phoneForgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin25"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.essensys.JB089.CustomView.CustomEditText
                                android:id="@+id/edt_EmailUpdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                android:padding="8dp"
                                android:fontFamily="sans-serif"

                                android:inputType="textEmailAddress"
                                android:background="@null"
                                android:textSize="@dimen/textSize18"
                                />

                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/lightest_gray"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin15"

                                android:orientation="horizontal">

                                <android.support.design.widget.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.2"
                                    android:theme="@style/TextInputLayoutAppearance">
                                    <com.essensys.JB089.CustomView.CustomEditText
                                        android:id="@+id/edt_otpEmailUpdate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/textSize18"
                                        android:hint="Verification Code"
                                        android:background="@null"
                                        android:fontFamily="sans-serif"

                                        android:layout_marginRight="5dp"
                                        android:padding="@dimen/padding10"
                                        android:inputType="text"/>

                                </android.support.design.widget.TextInputLayout>

                                <com.essensys.JB089.CustomView.CustomTextView
                                    android:id="@+id/txt_sendCodeEmailUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin20"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/textSize18"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:text=""
                                    android:layout_weight="0.8"
                                    />
                                <com.essensys.JB089.CustomView.CustomTextView
                                    android:id="@+id/txt_secsCodeEmailUpdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin20"
                                    android:layout_marginLeft="5dp"
                                    android:padding="5dp"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/textSize18"
                                    android:gravity="right"
                                    android:text=""
                                    android:layout_weight="0.8"
                                    />

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/lightest_gray"/>
                        </LinearLayout>


                    </LinearLayout>



                    <com.essensys.JB089.CustomView.CustomButton
                        android:id="@+id/btn_UpdateEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_marginTop="@dimen/margin30"
                        android:textSize="@dimen/textSize24"
                        android:fontFamily="sans-serif"
                      android:padding="@dimen/margin15"
                        android:textColor="@color/white"
                        android:background="@drawable/drawable_btns_reg"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </FrameLayout>



</RelativeLayout>